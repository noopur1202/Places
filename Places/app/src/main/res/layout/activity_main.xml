<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen50sp"
            android:id="@+id/title_layout"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_title"
                android:text="@string/app_name"
                android:textSize="@dimen/dimen30sp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen50sp"
                android:id="@+id/location_explore_layout"
                android:background="@color/grey">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_corners"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/location_image"
                    android:src="@drawable/baseline_location_on_white_18dp"
                    android:tint="@color/dark_grey"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/location_image"
                    android:hint="@string/add_loaction_text"
                    android:layout_marginStart="@dimen/dimen8sp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen20sp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>